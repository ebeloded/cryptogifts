  "engines": {
    "node": "14"
  },
  "main": "build/index.js",
  "dependencies": {
    "firebase-admin": "10.0.0",
    "firebase-functions": "3.16.0"
  },
  "devDependencies": {
    "typescript": "4.4.4"
  },
  "private": true
}
