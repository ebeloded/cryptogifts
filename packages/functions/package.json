    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "type": "module",
  "main": "build/index.js",
  "dependencies": {
    "@cryptogifts/api": "workspace:1.0.0",
    "firebase-admin": "10.0.0",
    "firebase-functions": "3.16.0",
    "my-kit-lib": "0.0.3",
    "object-call-utils": "1.3.0"
  },
  "devDependencies": {
    "esbuild": "0.13.14",
    "typescript": "4.5.2"
  },
  "private": true
}
